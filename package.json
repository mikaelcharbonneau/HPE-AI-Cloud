{
  "name": "datacenter-audit-tool",
  "version": "1.0.0",
  "description": "HPE Datacenter Audit Tool - Internal web application for streamlining datacenter auditing processes",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd client && npm install && npm run build",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint . --ext .js,.jsx",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "psql": "^0.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-node": "^4.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "hpe",
    "datacenter",
    "audit",
    "node.js",
    "react",
    "grommet",
    "azure"
  ],
  "author": "HPE Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hpe/datacenter-audit-tool.git"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js",
      "<rootDir>/src/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/client/"
    ]
  }
}
