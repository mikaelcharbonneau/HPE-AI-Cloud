# HPE Datacenter Audit Tool - Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=development
PORT=3000

# Azure Database Configuration (PostgreSQL Flexible Server)
DATABASE_HOST=your-azure-postgresql-server.postgres.database.azure.com
DATABASE_PORT=5432
DATABASE_NAME=datacenter_audit
DATABASE_USER=your-username
DATABASE_PASSWORD=your-password

# Azure AD Authentication (set to 'true' to use Azure AD instead of password)
AZURE_AD_AUTH=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Azure App Service (for production)
AZURE_APP_SERVICE_NAME=your-app-service-name

# Security Settings
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# File Upload Settings
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info